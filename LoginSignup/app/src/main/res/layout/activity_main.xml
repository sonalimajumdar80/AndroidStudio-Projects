<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/a1"
    tools:context="com.example.sonali.loginsignup.MainActivity">


    <TextView
        android:id="@+id/hello1"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:paddingLeft="45pt"
        android:paddingRight="41pt"
        android:paddingBottom="20sp"
        android:text="SIGN UP FORM"
        android:textSize="40px"
        android:textStyle="bold"
        android:textColor="@color/colorAccent3"
        android:textDirection="firstStrong"
        android:background="@color/colorAccent"

        />
    <TextView
        android:id="@+id/hello2"
        android:layout_below="@+id/hello1"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="@color/colorAccent1"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/hello3"
        android:layout_below="@+id/hello2"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textColor="@color/colorAccent1"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/hello4"
        android:layout_below="@+id/hello3"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail Id: "
        android:textColor="@color/colorAccent1"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/hello5"
        android:layout_below="@+id/hello4"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No: "
        android:textColor="@color/colorAccent1"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/hello6"
        android:layout_below="@+id/hello1"
        android:paddingTop="20dp"
        android:layout_toRightOf="@+id/hello2"
        android:hint="Enter your name here"
        android:textColorHint="@color/colorAccent"
        android:textStyle="italic"
        android:layout_marginEnd="@dimen/activity_vertical_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/hello7"
        android:layout_below="@+id/hello6"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/hello3"
        android:hint="Enter your age here"
        android:textColorHint="@color/colorAccent"
        android:textStyle="italic"
        android:layout_marginEnd="@dimen/activity_vertical_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/hello8"
        android:layout_below="@+id/hello7"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/hello4"
        android:hint="Enter your mail id here"
        android:textColorHint="@color/colorAccent"
        android:textStyle="italic"
        android:layout_marginEnd="@dimen/activity_vertical_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/hello9"
        android:layout_below="@+id/hello8"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/hello5"
        android:hint="Enter your phone no. here"
        android:textColorHint="@color/colorAccent"
        android:textStyle="italic"
        android:layout_marginEnd="@dimen/activity_vertical_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn1"
        android:layout_below="@+id/hello5"
        android:layout_marginTop="120sp"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="SIGN UP"
        android:background="@color/colorAccent1"
        android:textSize="15dp"/>
</RelativeLayout>
