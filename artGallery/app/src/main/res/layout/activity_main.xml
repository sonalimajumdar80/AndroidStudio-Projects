<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:layout_centerHorizontal="true"
android:background="@color/colorPrimary"
tools:context="com.example.sonali.artgallery.MainActivity">

<TextView
    android:id="@+id/hello"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" ART GALLERY"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="@color/colorAccent"
    android:layout_centerHorizontal="true"/>


        android:layout_width="500dp"
        android:layout_height="500dp"
<ImageButton
    android:id="@+id/hello1"
    android:layout_width="500dp"
    android:layout_height="200dp"
    android:layout_below="@+id/hello"
    android:src="@drawable/a1"
    android:paddingBottom="60dp"
    android:paddingTop="500dp"
    android:paddingLeft="200dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"

    />
    <ImageButton
        android:id="@+id/hello2"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/hello1"
        android:src="@drawable/a2"
        android:paddingBottom="60dp"
        android:paddingTop="120dp"
        android:paddingLeft="12dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"

        />
    <ImageButton
        android:id="@+id/hello3"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/hello2"
        android:src="@drawable/a3"
        android:paddingBottom="60dp"
        android:paddingTop="220dp"
        android:paddingLeft="1200dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"

        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarSize="20dp">

    </ScrollView>






</RelativeLayout>

